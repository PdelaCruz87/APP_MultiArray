<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
          android:id="@+id/txt_Inicio"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="INICIO"
          android:textSize="35sp"
          android:textAlignment="center"
          android:textStyle="bold"
          android:layout_marginTop="75sp"
        />
    <EditText
         android:id="@+id/txt_Nombre"
         android:hint="Ingrese Nombre"
         android:layout_below="@+id/txt_Inicio"
         android:layout_marginTop="20sp"
         android:textAlignment="viewStart"
         android:layout_marginLeft="15sp"
         android:layout_marginRight="15sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

    <EditText
         android:id="@+id/txt_Edad"
         android:hint="Ingrese Edad"
         android:layout_marginTop="15sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/txt_Nombre"
         android:layout_marginRight="15sp"
         android:layout_marginLeft="15sp"
        />
    <Button
        android:id="@+id/btn_Validar"
        android:text="ENTRAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Edad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:onClick="Arrays"
        />
    <Button
        android:id="@+id/btn_Salir"
        android:text="SALIR"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_Validar"
        android:layout_marginTop="50sp"
        android:backgroundTint="#EE0038"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Arrays"
        />
   </RelativeLayout>